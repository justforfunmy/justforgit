</head>

<body class="bg">
    <div class="deform">
        <form>
            <h3>登录</h3>
            <div class="form-group">
                <input class="form-control" id="userName" placeholder="name">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
            <button type="button" class="btn btn-default" id="login">login</button>
        </form>
    </div>

    <script>
        $(function() {
            $("#login").on('click', function() {
                $.ajax({
                    url: 'http://localhost:3000/login',
                    type: 'POST',
                    data: {
                        name: $('#userName').val(),
                        password: $('#password').val()
                    },
                    success: function(res) {
                        console.log(res);
                        getLogin()
                        if (res.code === 1) {

                            // window.location.href = "./blog.html"
                        }
                    },
                    error: function(err) {
                        console.log(err)
                    }
                })
            })

        })


        function getLogin() {
            $.ajax({
                url: 'http://localhost:3000/login',
                type: 'GET',
                xhrFields: {
                    withCredentials: true
                },
                crossDomain: true,
                success: function(res) {
                    console.log(res)
                },
                error: function(err) {
                    console.log(err)
                }
            })

        }
    </script>

</body>

</html>